{% extends 'base.html.twig' %}

{% block title %}Estad√≠sticas Globales - Cine Ranking Pro{% endblock %}

{% block body %}
<style>
    :root {
        --glass: rgba(30, 41, 59, 0.6);
        --glass-border: rgba(255, 255, 255, 0.1);
        --gold: #fbbf24;
        --sky: #38bdf8;
    }

    body {
        background: radial-gradient(circle at top, #1e293b 0%, #0f172a 100%);
        color: white;
        font-family: 'Poppins', sans-serif;
    }

    .stats-container {
        padding: 60px 20px;
        max-width: 1100px;
        margin: 0 auto;
    }

    .header-box {
        text-align: center;
        margin-bottom: 50px;
    }

    .header-box h1 {
        font-size: 3rem;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: -1px;
        background: linear-gradient(to right, #fff, var(--sky));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .ranking-section {
        background: var(--glass);
        backdrop-filter: blur(15px);
        border: 1px solid var(--glass-border);
        border-radius: 30px;
        padding: 40px;
        margin-bottom: 40px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.3);
    }

    .ranking-title {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 30px;
        border-left: 5px solid var(--gold);
        padding-left: 20px;
    }

    .ranking-title h2 {
        margin: 0;
        font-weight: 800;
        color: var(--gold);
        text-transform: uppercase;
        font-size: 1.8rem;
    }

    .custom-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

    .custom-table th {
        text-transform: uppercase;
        font-size: 0.75rem;
        color: #94a3b8;
        padding: 15px;
        letter-spacing: 2px;
    }

    .custom-table tr {
        transition: 0.3s;
    }

    .custom-table td {
        background: rgba(15, 23, 42, 0.4);
        padding: 20px;
        border-top: 1px solid var(--glass-border);
        border-bottom: 1px solid var(--glass-border);
    }

    .custom-table td:first-child { border-radius: 15px 0 0 15px; border-left: 1px solid var(--glass-border); }
    .custom-table td:last-child { border-radius: 0 15px 15px 0; border-right: 1px solid var(--glass-border); }

    .custom-table tr:hover td {
        background: rgba(56, 189, 248, 0.1);
        border-color: var(--sky);
        transform: scale(1.01);
    }

    .rank-number {
        font-weight: 900;
        font-size: 1.2rem;
        color: var(--sky);
    }

    .peli-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .peli-info strong {
        font-size: 1.1rem;
        color: #f8fafc;
    }

    .badge-votos {
        background: rgba(56, 189, 248, 0.2);
        color: var(--sky);
        padding: 6px 15px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.8rem;
        border: 1px solid rgba(56, 189, 248, 0.3);
    }

    .rating-star {
        color: var(--gold);
        font-weight: 800;
        font-size: 1.1rem;
    }

    .btn-back {
        display: inline-block;
        margin-top: 30px;
        padding: 12px 30px;
        background: var(--glass);
        border: 1px solid var(--glass-border);
        border-radius: 50px;
        color: white;
        text-decoration: none;
        transition: 0.3s;
        font-weight: 600;
    }

    .btn-back:hover {
        background: white;
        color: #0f172a;
    }

    @media (max-width: 768px) {
        .custom-table thead { display: none; }
        .custom-table td { display: block; text-align: right; border: none !important; }
        .custom-table td::before { content: attr(data-label); float: left; font-weight: bold; color: var(--sky); }
    }
</style>

<div class="stats-container">
    <div class="header-box">
        <h1>üìä Clasificaciones</h1>
        <p style="color: #94a3b8; font-weight: 500;">An√°lisis de popularidad y valoraciones en tiempo real</p>
    </div>

    {% for item in datos %}
        <div class="ranking-section">
            <div class="ranking-title">
                <h2>{{ item.ranking.nombre }}</h2>
            </div>

            <table class="custom-table">
                <thead>
                    <tr>
                        <th style="width: 10%">Pos</th>
                        <th style="width: 50%">Pel√≠cula</th>
                        <th style="width: 20%">Popularidad</th>
                        <th style="width: 20%">Calificaci√≥n</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entry in item.clasificacion %}
                        <tr>
                            <td class="rank-number">#{{ loop.index }}</td>
                            <td>
                                <div class="peli-info">
                                    <strong>{{ entry.pelicula.titulo }}</strong>
                                </div>
                            </td>
                            <td>
                                <span class="badge-votos">{{ entry.votos }} Listas</span>
                            </td>
                            <td>
                                <span class="rating-star">‚≠ê {{ entry.media|number_format(1) }}</span>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center" style="color: #94a3b8; padding: 40px;">
                                No hay pel√≠culas registradas en este ranking.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endfor %}

    <div style="text-align: center;">
        <a href="{{ path('app_user_dashboard') }}" class="btn-back">‚Üê Volver al Panel</a>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Clasificación: {{ ranking.nombre }}{% endblock %}

{% block body %}
<style>
    body {
        background-color: #05080f;
        color: white;
        font-family: 'Poppins', sans-serif;
        background-image: radial-gradient(circle at top, #1e293b 0%, #05080f 80%);
        min-height: 100vh;
        margin: 0;
        padding-bottom: 60px;
    }

    .container-stats { max-width: 1100px; margin: auto; padding: 40px 20px; }

    .btn-back {
        color: #94a3b8;
        text-decoration: none;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 30px;
        transition: 0.3s;
    }
    .btn-back:hover { color: white; transform: translateX(-5px); }

    .stats-header { text-align: center; margin-bottom: 60px; }
    .stats-header h1 {
        font-size: 3.8rem;
        font-weight: 900;
        background: linear-gradient(135deg, #fbbf24 0%, #d97706 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
        letter-spacing: -1px;
    }
    .stats-header p { color: #94a3b8; font-size: 1.2rem; margin-top: 10px; }

    .podium {
        display: flex;
        justify-content: center;
        align-items: flex-end;
        gap: 20px;
        margin-bottom: 100px;
        padding-top: 40px;
    }

    .podium-item {
        background: #111827;
        border-radius: 28px;
        padding: 35px 20px;
        text-align: center;
        width: 280px;
        border: 2px solid #374151;
        position: relative;
        overflow: hidden;
        transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-end;
    }

    .podium-item:hover { transform: translateY(-10px); }

    .peli-bg {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        background-size: cover;
        background-position: center;
        opacity: 0.4;
        mask-image: linear-gradient(to bottom, rgba(0,0,0,1) 10%, rgba(0,0,0,0) 90%);
        -webkit-mask-image: linear-gradient(to bottom, rgba(0,0,0,1) 10%, rgba(0,0,0,0) 90%);
        z-index: 1;
        transition: 0.5s ease;
    }
    .podium-item:hover .peli-bg { opacity: 0.6; transform: scale(1.1); }

    .podium-content { position: relative; z-index: 2; width: 100%; }

    .rank-1 { height: 450px; order: 2; border-color: #fbbf24; box-shadow: 0 0 50px rgba(251, 191, 36, 0.2); }
    .rank-2 { height: 360px; order: 1; border-color: #94a3b8; }
    .rank-3 { height: 320px; order: 3; border-color: #b45309; }

    .medal-circle {
        width: 55px; height: 55px; border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        font-weight: 900; font-size: 1.5rem; margin: 0 auto 25px;
        border: 3px solid rgba(255,255,255,0.2);
    }
    .bg-1 { background: #fbbf24; color: #78350f; box-shadow: 0 0 25px #fbbf24; }
    .bg-2 { background: #94a3b8; color: #1e293b; }
    .bg-3 { background: #b45309; color: #fff; }

    .podium-title {
        font-weight: 800;
        font-size: 1.5rem;
        margin-bottom: 25px;
        min-height: 4.5rem;
        text-shadow: 0 2px 15px rgba(0,0,0,0.9);
        line-height: 1.2;
    }

    .score-badge {
        background: rgba(15, 23, 42, 0.9);
        padding: 10px 30px;
        border-radius: 100px;
        font-weight: 800;
        color: #fbbf24;
        font-size: 1.2rem;
        border: 1px solid rgba(251, 191, 36, 0.5);
        display: inline-block;
    }

    .stats-table { width: 100%; border-collapse: separate; border-spacing: 0 15px; }
    .stats-row {
        background: rgba(30, 41, 59, 0.3);
        backdrop-filter: blur(5px);
        transition: 0.3s;
    }
    .stats-row:hover { background: rgba(30, 41, 59, 0.5); }

    .stats-row td { padding: 25px; border-top: 1px solid rgba(255,255,255,0.05); border-bottom: 1px solid rgba(255,255,255,0.05); }
    .stats-row td:first-child { border-radius: 20px 0 0 20px; text-align: center; width: 80px; font-weight: 900; color: #64748b; font-size: 1.3rem; }
    .stats-row td:last-child { border-radius: 0 20px 20px 0; text-align: right; }

    .bar-container { width: 100%; background: rgba(255,255,255,0.05); height: 8px; border-radius: 10px; margin-top: 12px; overflow: hidden; }
    .bar-fill { height: 100%; background: #fbbf24; border-radius: 10px; box-shadow: 0 0 10px rgba(251, 191, 36, 0.4); }
</style>

<div class="container-stats">
    <a href="{{ path('app_ranking_view', {'id': ranking.id}) }}" class="btn-back">
        <span>←</span> Volver a la edición
    </a>

    <div class="stats-header">
        <h1>Clasificación Global</h1>
        <p>Resultados de <strong>{{ ranking.nombre }}</strong> según los usuarios</p>
    </div>

    {# SECCIÓN PODIO (TOP 3) #}
    <div class="podium">
        {% for dato in clasificacion|slice(0, 3) %}
            <div class="podium-item rank-{{ loop.index }}">
                {# Imagen de fondo dinámica #}
                <div class="peli-bg" style="background-image: url('{{ dato.pelicula.imageUrl ?: 'https://via.placeholder.com/400x600?text=Cine' }}');"></div>

                <div class="podium-content">
                    <div class="medal-circle bg-{{ loop.index }}">
                        {{ loop.index }}
                    </div>
                    <span class="podium-title">{{ dato.pelicula.titulo }}</span>
                    <div class="score-badge">
                        {{ dato.votos }} Listas
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {# SECCIÓN LISTADO COMPLETO #}
    <table class="stats-table">
        <tbody>
            {% for dato in clasificacion %}
                <tr class="stats-row">
                    <td>#{{ loop.index }}</td>
                    <td>
                        <div style="display: flex; align-items: center; gap: 15px;">
                            {# Miniatura opcional en la tabla #}
                            <img src="{{ dato.pelicula.imageUrl }}" style="width: 40px; height: 60px; object-fit: cover; border-radius: 5px; border: 1px solid rgba(255,255,255,0.1);">
                            <div style="flex-grow: 1;">
                                <div style="font-weight: 700; font-size: 1.3rem; color: #f1f5f9;">{{ dato.pelicula.titulo }}</div>
                                <div class="bar-container">
                                    <div class="bar-fill" style="width: {{ (dato.media * 20) }}%;"></div>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div style="font-size: 0.7rem; color: #64748b; font-weight: bold; text-transform: uppercase;">Media</div>
                        <div style="color: #fbbf24; font-weight: 900; font-size: 1.8rem;">
                            {{ dato.media|number_format(1) }}
                        </div>
                        <div style="font-size: 0.7rem; color: #475569;">{{ dato.votos }} votos</div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}üèÜ Ranking de Pel√≠culas{% endblock %}

{% block stylesheets %}
    <style>
        body { background: #81d4fa; color: #1e293b; font-family: 'Inter', sans-serif; min-height: 100vh; margin: 0; }
        .ranking-header { color: #f59e0b; font-weight: 900; text-transform: uppercase; text-shadow: 2px 2px rgba(0,0,0,0.1); }
        .category-btn { background: rgba(255, 255, 255, 0.4); color: #1e293b; border-radius: 30px; padding: 10px 25px; text-decoration: none; font-weight: 600; transition: all 0.2s; border: 1px solid rgba(255,255,255,0.2); }
        .category-btn.active { background: #ffc107 !important; color: #000 !important; border-color: #f59e0b; box-shadow: 0 4px 10px rgba(0,0,0,0.1); }
        .ranking-card { background: #33475b; border-radius: 24px; overflow: hidden; margin-top: 20px; box-shadow: 0 15px 35px rgba(0,0,0,0.2); }
        .table-custom { width: 100%; border-collapse: collapse; color: #f8fafc; }
        .table-custom thead th { background: #243447; color: #94a3b8; padding: 20px; text-transform: uppercase; font-size: 0.85rem; border-bottom: 3px solid #f59e0b; letter-spacing: 1px; }
        .table-custom tbody tr { border-bottom: 1px solid rgba(255,255,255,0.05); transition: background 0.3s; }
        .table-custom tbody tr:hover { background: rgba(255,255,255,0.03); }
        .rank-badge { width: 45px; height: 45px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto; font-size: 1.2rem; }
        .movie-thumb { width: 55px; height: 80px; object-fit: cover; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.3); }
        .movie-link { color: #ffffff; text-decoration: none; font-weight: 700; font-size: 1.15rem; }
        .movie-link:hover { color: #ffc107; }
        .score-badge { background: #42556a; border: 1px solid rgba(255,255,255,0.1); padding: 8px 18px; border-radius: 12px; color: #ffc107; font-weight: bold; }
        .search-input { background: rgba(255, 255, 255, 0.5); border: 2px solid transparent; padding: 15px 25px; border-radius: 15px; width: 100%; max-width: 450px; color: #1e293b; font-size: 1rem; }
    </style>
{% endblock %}

{% block body %}
    <div class="container" style="max-width: 1200px; margin: 50px auto; padding: 0 20px;">
        <a href="{{ path('app_home') }}" style="color: #f59e0b; text-decoration: none; font-weight: bold;">‚Üê Volver al Inicio</a>
        <h1 class="ranking-header" style="font-size: 4.5rem; margin: 25px 0;">TOP {{ categoria_actual|default('GENERAL')|upper }}</h1>

        <div style="margin-bottom: 35px;">
            <form action="{{ path('app_admin_ranking_genero', {genero: 'all'}) }}" method="get">
                <input type="text" name="q" class="search-input" placeholder="Buscar por t√≠tulo o g√©nero..." value="{{ texto_busqueda }}">
            </form>
        </div>

        <div style="display: flex; gap: 12px; flex-wrap: wrap; margin-bottom: 45px;">
            <a href="{{ path('app_admin_ranking_genero', {genero: 'all'}) }}" class="category-btn {{ (categoria_actual == 'all' or categoria_actual is null) ? 'active' : '' }}">Todos</a>
            {% for g in generos %}
                <a href="{{ path('app_admin_ranking_genero', {genero: g}) }}" class="category-btn {{ categoria_actual == g ? 'active' : '' }}">{{ g }}</a>
            {% endfor %}
        </div>

        <div class="ranking-card">
            <table class="table-custom">
                <thead>
                    <tr>
                        <th style="width: 100px;">POS</th>
                        <th style="text-align: left;">PEL√çCULA</th>
                        <th>G√âNERO</th>
                        <th>NOTA MEDIA</th>
                        <th>VOTOS</th>
                    </tr>
                </thead>
                <tbody>
                    {% for p in peliculas %}
                        {% set suma = 0 %}
                        {% set totalVotos = p.valoraciones|length %}
                        {% for v in p.valoraciones %}{% set suma = suma + v.puntuacion %}{% endfor %}
                        {% set media = totalVotos > 0 ? (suma / totalVotos) : 0 %}
                        <tr>
                            <td style="text-align: center; padding: 25px;">
                                {% if loop.index == 1 %}<div class="rank-badge" style="background: #ffc107; color: #000;">ü•á</div>
                                {% elseif loop.index == 2 %}<div class="rank-badge" style="background: #e2e8f0; color: #000;">ü•à</div>
                                {% elseif loop.index == 3 %}<div class="rank-badge" style="background: #cd7f32; color: #fff;">ü•â</div>
                                {% else %}<span style="color: #94a3b8; font-weight: bold;">{{ loop.index }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <div style="display: flex; align-items: center; gap: 20px;">
                                    <img src="{{ p.imageUrl }}" class="movie-thumb" alt="Poster">
                                    <div>
                                        <a href="{{ path('app_admin_pelicula_show', {id: p.id}) }}" class="movie-link">{{ p.titulo }}</a>
                                        <div style="color: #94a3b8; font-size: 0.85rem;">{{ p.year }}</div>
                                    </div>
                                </div>
                            </td>
                            <td style="text-align: center;">
                                <span style="background: #1e293b; color: #f8fafc; padding: 6px 14px; border-radius: 8px; font-size: 0.8rem;">{{ p.genre }}</span>
                            </td>
                            <td style="text-align: center;">
                                <div class="score-badge">‚òÖ {{ media|number_format(1) }}</div>
                            </td>
                            <td style="text-align: center; color: #cbd5e1;">
                                üí¨ {{ totalVotos }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

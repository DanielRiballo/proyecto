{% extends 'base.html.twig' %}

{% block title %}Panel de Estadísticas Pro{% endblock %}

{% block body %}
<style>
    :root {
        --glass: rgba(255, 255, 255, 0.95);
        --shadow: 0 8px 30px rgba(0,0,0,0.04);
        --primary: #4361ee;
    }

    body { background-color: #f0f2f5; font-family: 'Segoe UI', Roboto, sans-serif; }

    .dashboard-wrapper { padding: 40px 20px; max-width: 1400px; margin: 0 auto; }

    .header-minimal { margin-bottom: 40px; }
    .header-minimal h1 { font-weight: 800; color: #1a1c1e; letter-spacing: -1px; }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr); /* Esto obliga a que sean 4 por fila */
        gap: 20px;
        margin-bottom: 40px;
    }

    @media (max-width: 992px) { .stats-grid { grid-template-columns: repeat(2, 1fr); } }
    @media (max-width: 576px) { .stats-grid { grid-template-columns: 1fr; } }

    .card-pro {
        background: var(--glass);
        border: 1px solid rgba(255,255,255,0.3);
        border-radius: 24px;
        padding: 30px;
        box-shadow: var(--shadow);
        position: relative;
        transition: transform 0.2s ease;
    }

    .card-pro:hover { transform: translateY(-5px); }

    .indicator {
        position: absolute;
        left: 0; top: 25%; bottom: 25%;
        width: 5px;
        border-radius: 0 10px 10px 0;
    }

    .val { font-size: 2.5rem; font-weight: 800; color: #1a1c1e; display: block; line-height: 1; }
    .lab { font-size: 0.8rem; font-weight: 700; color: #8e9196; text-transform: uppercase; margin-bottom: 5px; display: block; }

    .table-box {
        background: white;
        border-radius: 24px;
        padding: 30px;
        box-shadow: var(--shadow);
    }

    .custom-table thead th {
        background: transparent;
        border-bottom: 2px solid #f0f2f5;
        color: #8e9196;
        font-size: 0.75rem;
        padding: 15px;
    }

    .custom-table tbody td { padding: 20px 15px; border-bottom: 1px solid #f8f9fa; color: #444; }

    .btn-back {
        background: #1a1c1e;
        color: white;
        border-radius: 12px;
        padding: 10px 20px;
        text-decoration: none;
        font-weight: 600;
        transition: 0.3s;
    }
    .btn-back:hover { background: #4361ee; color: white; }
</style>

<div class="dashboard-wrapper">
    <div class="header-minimal d-flex justify-content-between align-items-end">
        <div>
            <h1>Estadísticas</h1>
            <p class="text-muted m-0">Análisis detallado del sistema (RF9)</p>
        </div>
        <a href="{{ path('app_admin_dashboard') }}" class="btn-back">Volver al Panel</a>
    </div>

    <div class="stats-grid">
        <div class="card-pro">
            <div class="indicator" style="background: #4361ee;"></div>
            <span class="lab">Usuarios</span>
            <span class="val">{{ total_usuarios }}</span>
        </div>

        <div class="card-pro">
            <div class="indicator" style="background: #ef4444;"></div>
            <span class="lab">Películas</span>
            <span class="val">{{ total_peliculas }}</span>
        </div>

        <div class="card-pro">
            <div class="indicator" style="background: #10b981;"></div>
            <span class="lab">Rankings</span>
            <span class="val">{{ total_rankings }}</span>
        </div>

        <div class="card-pro">
            <div class="indicator" style="background: #8b5cf6;"></div>
            <span class="lab">Valoraciones</span>
            <span class="val">{{ valoraciones|length }}</span>
        </div>
    </div>

    <div class="table-box">
        <h4 class="fw-bold mb-4">Registro de Actividad Reciente</h4>
        <div class="table-responsive">
            <table class="table custom-table">
                <thead>
                    <tr>
                        <th>USUARIO</th>
                        <th>PELÍCULA</th>
                        <th>CALIFICACIÓN</th>
                        <th>COMENTARIO</th>
                        <th class="text-end">ESTADO</th>
                    </tr>
                </thead>
                <tbody>
                    {% for v in valoraciones %}
                    <tr>
                        <td class="fw-bold">{{ v.usuario.email }}</td>
                        <td><span class="badge rounded-pill bg-light text-dark p-2 px-3">{{ v.pelicula.titulo }}</span></td>
                        <td>
                            <span class="text-warning">
                                {% for i in 1..5 %}
                                    {{ i <= v.puntuacion ? '★' : '☆' }}
                                {% endfor %}
                            </span>
                        </td>
                        <td><small class="text-muted">"{{ v.comentario|default('---') }}"</small></td>
                        <td class="text-end">
                            <span class="badge bg-success-subtle text-success border border-success px-3">Activo</span>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Editar Película{% endblock %}

{% block body %}
    <style>
        .form-card {
            max-width: 600px;
            margin: 40px auto;
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            font-family: sans-serif;
        }
        h1 { text-align: center; color: #333; margin-bottom: 30px; }

        /* Estilos de inputs */
        input[type="text"], input[type="number"], textarea, select {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
            font-size: 1rem;
        }
        input:focus, textarea:focus { border-color: #ffc107; outline: none; } /* Amarillo al editar */

        label { font-weight: bold; color: #555; display: block; margin-bottom: 8px; }

        .btn-save {
            width: 100%;
            background-color: #ffc107; /* Botón amarillo para editar */
            color: #333;
            padding: 15px;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            cursor: pointer;
            font-weight: bold;
        }
        .btn-save:hover { background-color: #e0a800; }
        .back-link { display: block; text-align: center; margin-top: 20px; color: #666; text-decoration: none; }
    </style>

    <div class="form-card">
        <h1>Editar Película</h1>

        {{ include('admin_pelicula/_form.html.twig', {'button_label': 'Guardar Cambios'}) }}

        <div style="display: flex; justify-content: center; gap: 20px; margin-top: 20px;">
            <a href="{{ path('app_admin_pelicula_index') }}" class="back-link" style="margin-top:0;">Cancelar</a>

            {{ include('admin_pelicula/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

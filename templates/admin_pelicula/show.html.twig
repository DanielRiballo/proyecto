{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #87CEEB !important; font-family: 'Poppins', sans-serif; padding-top: 30px; } /* A√±adido padding para compensar el nav */
        .movie-card {
            background: white; border-radius: 20px; overflow: hidden;
            transition: all 0.3s ease; height: 100%; border: none;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .movie-card:hover { transform: translateY(-10px); box-shadow: 0 15px 30px rgba(0,0,0,0.2); }
        .poster-container { height: 350px; overflow: hidden; position: relative; }
        .poster-container img { width: 100%; height: 100%; object-fit: cover; }

        .rating-badge {
            position: absolute; top: 10px; right: 10px;
            background: rgba(255,255,255,0.9); padding: 5px 12px;
            border-radius: 50px; font-weight: bold; color: #f59e0b;
        }

        .valoracion-item {
            border-left: 4px solid #3b82f6; background-color: #ffffff;
            padding: 15px; margin-bottom: 15px; border-radius: 12px;
        }
        .form-valorar {
            background-color: #f1f5f9; padding: 25px;
            border-radius: 20px; border: 1px solid #e2e8f0;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container pb-5">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success rounded-pill text-center shadow-sm mb-4 border-0">
            {{ message }}
        </div>
    {% endfor %}

    {% if pelicula is null %}
        {# --- VISTA CAT√ÅLOGO --- #}
        <h1 class="text-center fw-black mb-2" style="font-weight: 900; color: #1e293b;">EL CAT√ÅLOGO</h1>
        <p class="text-center text-muted mb-4">Pel√≠culas ordenadas por la comunidad</p>

        <div class="row justify-content-center mb-5">
            <div class="col-md-6">
                <form action="{{ path('app_pelicula_catalogo') }}" method="get" class="d-flex gap-2 p-2 bg-white rounded-pill shadow-sm">
                    <input type="text" name="q" class="form-control border-0 bg-transparent ps-4" placeholder="Buscar por t√≠tulo o g√©nero..." value="{{ texto_busqueda }}">
                    <button type="submit" class="btn btn-primary rounded-pill px-4">üîç</button>
                </form>
                {# Enlace de retorno manual ya que no hay navbar #}
                <div class="text-center mt-3">
                    <a href="{{ path('app_home') }}" class="text-white text-decoration-none small">‚Üê Volver al Inicio</a>
                </div>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
            {% for peli in peliculas %}
                <div class="col">
                    <div class="movie-card d-flex flex-column">
                        <div class="poster-container">
                            <img src="{{ peli.imageUrl }}" alt="{{ peli.titulo }}">
                            <div class="rating-badge">‚òÖ {{ peli.mediaReal }}</div>
                        </div>
                        <div class="card-body p-3 text-center">
                            <h6 class="fw-bold text-truncate mb-1">{{ peli.titulo }}</h6>
                            <small class="text-muted d-block mb-3">{{ peli.genre }}</small>
                            <a href="{{ path('app_admin_pelicula_show', {id: peli.id}) }}" class="btn btn-sm btn-dark w-100 rounded-pill">Detalles y Votar</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    {% else %}
        {# --- VISTA DETALLE --- #}
        <div class="card shadow border-0 p-4 mb-4" style="border-radius: 30px;">
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="{{ pelicula.imageUrl }}" class="img-fluid rounded-4 shadow-lg mb-3" alt="{{ pelicula.titulo }}">
                    <a href="{{ path('app_pelicula_catalogo') }}" class="btn btn-light w-100 rounded-pill mt-2 border">‚Üê Volver</a>
                </div>

                <div class="col-md-8">
                    <span class="badge bg-primary mb-2">{{ pelicula.genre }}</span>
                    <h1 class="fw-bold mb-0">{{ pelicula.titulo }}</h1>
                    <p class="fs-5 text-muted mb-4">{{ pelicula.year }}</p>

                    <div class="d-flex align-items-center gap-3 mb-4 p-3 bg-yellow-soft rounded-4" style="background: #fffbeb; border: 1px solid #fef3c7;">
                        <span style="font-size: 2rem;">‚≠ê</span>
                        <div>
                            <h3 class="mb-0 fw-bold" style="color: #b45309;">{{ pelicula.mediaReal }} / 5</h3>
                            <small class="text-muted">Basado en {{ pelicula.valoraciones|length }} opiniones</small>
                        </div>
                    </div>

                    <p class="text-secondary mb-4">{{ pelicula.description }}</p>

                    <hr class="my-4">

                    {# --- FORMULARIO DE VALORACI√ìN --- #}
                    <div class="form-valorar shadow-sm mb-5">
                        <h5 class="fw-bold mb-3">TU VALORACI√ìN</h5>
                        <form action="{{ path('app_pelicula_valorar', {'id': pelicula.id}) }}" method="POST">
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <select name="puntuacion" class="form-select rounded-pill" required>
                                        <option value="5">Excelente (5)</option>
                                        <option value="4">Muy buena (4)</option>
                                        <option value="3" selected>Normal (3)</option>
                                        <option value="2">Mala (2)</option>
                                        <option value="1">Horrible (1)</option>
                                    </select>
                                </div>
                                <div class="col-md-8 mb-3">
                                    <input type="text" name="comentario" class="form-control rounded-pill" placeholder="¬øQu√© te ha parecido?" required>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary fw-bold px-5 rounded-pill">ENVIAR NOTA</button>
                        </form>
                    </div>

                    <h5 class="fw-bold mb-4">OPINIONES RECIENTES</h5>
                    {% for valoracion in pelicula.valoraciones %}
                        <div class="valoracion-item shadow-sm">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="fw-bold" style="color: #1e293b;">{{ valoracion.usuario.email|split('@')[0] }}</div>
                                    <p class="mb-0 mt-1">"{{ valoracion.comentario }}"</p>
                                </div>
                                <span class="badge bg-warning text-dark">‚òÖ {{ valoracion.puntuacion }}</span>
                            </div>
                        </div>
                    {% else %}
                        <div class="text-center py-4 bg-light rounded-4">
                            <p class="text-muted mb-0">S√© el primero en opinar sobre esta pel√≠cula.</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Admin - Gesti√≥n de Pel√≠culas{% endblock %}

{% block body %}
    <style>
        .admin-container {
            max-width: 1400px;
            margin: 30px auto;
            padding: 0 20px;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        }

        .admin-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 30px;
        }

        .admin-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 20px rgba(0,0,0,0.08);
            transition: transform 0.3s ease;
            display: flex;
            flex-direction: column;
            border: none;
        }

        .admin-card:hover {
            transform: translateY(-10px);
        }

        .card-img-wrapper {
            height: 350px;
            overflow: hidden;
        }

        .card-img-top {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .card-body {
            padding: 20px;
            text-align: center;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 5px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .card-actions {
            padding: 0 15px 20px;
            display: flex;
            gap: 8px;
        }

        .btn-admin {
            flex: 1;
            padding: 8px 5px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            text-align: center;
            font-size: 0.75rem;
            border: none;
            display: inline-block;
        }

        .btn-view { background: #f3f4f6; color: #374151; }
        .btn-edit { background: #fca542; color: white; }

        .btn-delete {
            background: #fee2e2;
            color: #dc2626;
            cursor: pointer;
            transition: 0.2s;
        }
        .btn-delete:hover {
            background: #dc2626;
            color: white;
        }

        .badge-api {
            background: #e0f2fe;
            color: #0369a1;
            font-size: 0.65rem;
            padding: 2px 8px;
            border-radius: 10px;
            font-weight: bold;
            display: inline-block;
            margin-top: 5px;
        }

        .btn-back-pill {
            display: inline-flex;
            align-items: center;
            background: #e5e7eb;
            color: #4b5563;
            padding: 10px 25px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            transition: 0.3s;
            border: 1px solid #d1d5db;
        }

        .btn-new {
            background: #10b981;
            color: white;
            padding: 12px 25px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: bold;
        }

        @media (max-width: 1100px) { .admin-grid { grid-template-columns: repeat(2, 1fr); } }
        @media (max-width: 650px) { .admin-grid { grid-template-columns: 1fr; } }
    </style>

    <div class="admin-container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'danger' ? 'danger' : 'success' }} rounded-pill px-4 mb-4">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="admin-header">
            <div>
                <h1 class="fw-bold mb-0">üé¨ Gesti√≥n de Cat√°logo</h1>
                <p class="text-muted mb-0">Administra las pel√≠culas cargadas (Local + API)</p>
            </div>
            <a href="{{ path('app_admin_pelicula_new') }}" class="btn-new">
                + Nueva Pel√≠cula
            </a>
        </div>

        <div class="admin-grid">
            {% for pelicula in peliculas %}
                <div class="admin-card">
                    <div class="card-img-wrapper">
                        <img src="{{ pelicula.imageUrl }}" class="card-img-top" alt="{{ pelicula.titulo }}">
                    </div>
                    <div class="card-body">
                        <div class="card-title" title="{{ pelicula.titulo }}">{{ pelicula.titulo }}</div>
                        <div class="d-flex flex-column align-items-center">
                            <small class="text-muted">ID: {{ pelicula.id }}</small>
                            {# El distintivo ahora est√° correctamente dentro del bucle #}
                            <span class="badge-api">API SOURCE</span>
                        </div>
                    </div>

                    <div class="card-actions">
                        <a href="{{ path('app_admin_pelicula_show', {id: pelicula.id}) }}" class="btn-admin btn-view">Ver</a>
                        <a href="{{ path('app_admin_pelicula_edit', {id: pelicula.id}) }}" class="btn-admin btn-edit">Editar</a>

                        <form method="post" action="{{ path('app_admin_pelicula_delete', {id: pelicula.id}) }}" onsubmit="return confirm('¬øEliminar {{ pelicula.titulo }}?');" style="flex: 1;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pelicula.id) }}">
                            <button class="btn-admin btn-delete" style="width: 100%;">Borrar</button>
                        </form>
                    </div>
                </div>
            {% else %}
                <div class="text-center py-5" style="grid-column: 1 / -1;">
                    <p class="text-muted">No hay pel√≠culas en el cat√°logo.</p>
                </div>
            {% endfor %}
        </div>

        <div class="text-center mt-5 py-5">
            <a href="{{ path('app_admin_dashboard') }}" class="btn-back-pill">
                ‚¨Ö Volver al Panel de Control
            </a>
        </div>
    </div>
{% endblock %}

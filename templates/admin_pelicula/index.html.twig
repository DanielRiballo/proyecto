{% extends 'base.html.twig' %}

{% block title %}Admin - Gesti√≥n de Pel√≠culas{% endblock %}

{% block body %}
    <style>
        .admin-container {
            max-width: 1400px;
            margin: 30px auto;
            padding: 0 20px;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        }

        /* GRID 4x4 ID√âNTICO A CARTELERA */
        .admin-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 30px;
        }

        .admin-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 20px rgba(0,0,0,0.08);
            transition: transform 0.3s ease;
            display: flex;
            flex-direction: column;
            border: none;
        }

        .admin-card:hover {
            transform: translateY(-10px);
        }

        .card-img-wrapper {
            height: 350px;
            overflow: hidden;
        }

        .card-img-top {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .card-body {
            padding: 20px;
            text-align: center;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 5px;
        }

        .card-actions {
            padding: 0 20px 20px;
            display: flex;
            gap: 10px;
        }

        .btn-admin {
            flex: 1;
            padding: 8px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            text-align: center;
            font-size: 0.85rem;
        }

        .btn-view { background: #f3f4f6; color: #374151; }
        .btn-edit { background: #fca542; color: white; }

        /* BOT√ìN VOLVER ESTILO PANEL */
        .btn-back-pill {
            display: inline-flex;
            align-items: center;
            background: #e5e7eb;
            color: #4b5563;
            padding: 10px 25px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            transition: 0.3s;
            border: 1px solid #d1d5db;
        }

        .btn-back-pill:hover {
            background: #d1d5db;
            color: #1f2937;
            transform: translateX(-5px);
        }

        .btn-new {
            background: #10b981;
            color: white;
            padding: 12px 25px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: bold;
        }

        @media (max-width: 1100px) { .admin-grid { grid-template-columns: repeat(2, 1fr); } }
        @media (max-width: 650px) { .admin-grid { grid-template-columns: 1fr; } }
    </style>

    <div class="admin-container">
        <div class="admin-header">
            <div>
                <h1 class="fw-bold mb-0">üé¨ Gesti√≥n de Cat√°logo</h1>
            </div>
            <a href="{{ path('app_admin_pelicula_new') }}" class="btn-new">
                + Nueva Pel√≠cula
            </a>
        </div>

        <div class="admin-grid">
            {% for pelicula in peliculas %}
                <div class="admin-card">
                    <div class="card-img-wrapper">
                        <img src="{{ pelicula.imageUrl }}" class="card-img-top" alt="{{ pelicula.titulo }}">
                    </div>
                    <div class="card-body">
                        <div class="card-title">{{ pelicula.titulo }}</div>
                        <small class="text-muted">ID: {{ pelicula.id }}</small>
                    </div>
                    <div class="card-actions">
                        <a href="{{ path('app_admin_pelicula_show', {id: pelicula.id}) }}" class="btn-admin btn-view">Ver</a>
                        <a href="{{ path('app_admin_pelicula_edit', {id: pelicula.id}) }}" class="btn-admin btn-edit">Editar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <br>
        <br>

        <div class="text-center mt-5">
            <a href="{{ path('app_admin_dashboard') }}" class="btn-back-pill">
                ‚¨Ö Volver al Panel de Control
            </a>
        </div>
    </div>
{% endblock %}

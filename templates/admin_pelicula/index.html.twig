{% extends 'base.html.twig' %}

{% block title %}Admin Pel칤culas{% endblock %}

{% block body %}
    <style>
        /* Contenedor principal */
        .admin-container {
            max-width: 1400px;
            margin: 30px auto;
            padding: 0 20px;
            font-family: sans-serif;
        }

        /* Cabecera con t칤tulo y bot칩n de crear */
        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        /* EL GRID: Aqu칤 est치 la magia del 4 en 4 */
        .admin-grid {
            display: grid;
            /* Forzamos 4 columnas de igual tama침o */
            grid-template-columns: repeat(4, 1fr);
            gap: 25px; /* Espacio entre tarjetas */
        }

        /* Dise침o de la Tarjeta de Admin */
        .admin-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            transition: transform 0.2s;
            display: flex;
            flex-direction: column;
            border: 1px solid #eee;
        }

        .admin-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
            border-color: #fca542; /* Borde naranja al pasar el rat칩n */
        }

        /* Imagen */
        .card-img-top {
            height: 200px;
            width: 100%;
            object-fit: cover;
            background-color: #f0f0f0;
            border-bottom: 1px solid #eee;
        }

        /* Cuerpo de la tarjeta */
        .card-body {
            padding: 15px;
            flex-grow: 1;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: bold;
            margin: 0 0 5px 0;
            color: #333;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis; /* Pone ... si el t칤tulo es muy largo */
        }

        .card-info {
            font-size: 0.85rem;
            color: #666;
            margin-bottom: 10px;
        }

        /* Botones de acci칩n */
        .card-actions {
            padding: 15px;
            background-color: #f9fafb;
            border-top: 1px solid #eee;
            display: flex;
            gap: 10px;
        }

        .btn-action {
            flex: 1;
            text-align: center;
            padding: 8px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: bold;
        }

        .btn-show { background-color: #e5e7eb; color: #374151; }
        .btn-show:hover { background-color: #d1d5db; }

        .btn-edit { background-color: #fca542; color: white; }
        .btn-edit:hover { background-color: #e6902d; }

        .btn-create {
            background-color: #10b981;
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: bold;
        }

        /* Para que no se rompa en m칩viles (opcional) */
        @media (max-width: 1000px) {
            .admin-grid { grid-template-columns: repeat(2, 1fr); }
        }
        @media (max-width: 600px) {
            .admin-grid { grid-template-columns: 1fr; }
        }
    </style>

    <div class="admin-container">

        <div class="admin-header">
            <h1 style="margin:0;">丘뙖잺 Gesti칩n de Pel칤culas</h1>
            <a href="{{ path('app_admin_pelicula_new') }}" class="btn-create">
                + Nueva Pel칤cula
            </a>
        </div>

        <div class="admin-grid">
            {% for pelicula in peliculas %}
                <div class="admin-card">
                    {% if pelicula.imageUrl %}
                        <img src="{{ pelicula.imageUrl }}" class="card-img-top" alt="Portada">
                    {% else %}
                        <div class="card-img-top" style="display:flex;align-items:center;justify-content:center;color:#999;">
                            游닝 Sin Imagen
                        </div>
                    {% endif %}

                    <div class="card-body">
                        <div class="card-title" title="{{ pelicula.titulo }}">{{ pelicula.titulo }}</div>
                        <div class="card-info">
                            ID: {{ pelicula.id }} | 游늰 {{ pelicula.year }}
                        </div>
                        <div style="font-size: 0.8rem; color: #777;">
                            {{ pelicula.description|slice(0, 50) }}...
                        </div>
                    </div>

                    <div class="card-actions">
                        <a href="{{ path('app_admin_pelicula_show', {'id': pelicula.id}) }}" class="btn-action btn-show">Ver</a>
                        <a href="{{ path('app_admin_pelicula_edit', {'id': pelicula.id}) }}" class="btn-action btn-edit">Editar</a>
                    </div>
                </div>
            {% else %}
                <div style="grid-column: 1/-1; text-align: center; padding: 40px;">
                    <h3>No hay pel칤culas creadas</h3>
                    <p>Dale al bot칩n verde de arriba para crear la primera.</p>
                </div>
            {% endfor %}
        </div>

        <div style="margin-top: 30px; text-align: center;">
            <a href="{{ path('app_home') }}" style="color: #666; text-decoration: none;">游댗 Volver al Inicio</a>
        </div>

    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Crear Nuevo Ranking - PelisValora{% endblock %}

{% block body %}
<style>
    .form-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 40px;
        background: rgba(30, 41, 59, 0.7);
        backdrop-filter: blur(20px);
        border-radius: 30px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    h1 {
        text-align: center;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: -1px;
        margin-bottom: 30px;
        background: linear-gradient(to bottom, #ffffff, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    label {
        color: #38bdf8;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 1px;
        margin-bottom: 10px;
        display: block;
    }

    input[type="text"], textarea {
        width: 100%;
        background: rgba(15, 23, 42, 0.8) !important;
        border: 2px solid rgba(255, 255, 255, 0.1) !important;
        border-radius: 15px !important;
        padding: 15px !important;
        color: white !important;
        font-size: 1rem;
        margin-bottom: 25px;
        transition: 0.3s;
    }

    input[type="text"]:focus {
        border-color: #38bdf8 !important;
        outline: none;
        box-shadow: 0 0 15px rgba(56, 189, 248, 0.2);
    }

    .peliculas-selector {
        background: rgba(15, 23, 42, 0.5);
        border-radius: 20px;
        padding: 20px;
        max-height: 400px;
        overflow-y: auto;
        border: 1px solid rgba(255, 255, 255, 0.05);
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
    }

    .peliculas-selector label {
        display: flex;
        align-items: center;
        background: rgba(255, 255, 255, 0.03);
        padding: 10px 15px;
        border-radius: 12px;
        cursor: pointer;
        transition: 0.2s;
        color: #e2e8f0;
        text-transform: none;
        letter-spacing: 0;
        font-size: 0.9rem;
        margin: 0;
    }

    .peliculas-selector label:hover {
        background: rgba(56, 189, 248, 0.1);
        color: white;
    }

    .peliculas-selector input[type="checkbox"] {
        margin-right: 12px;
        width: 18px;
        height: 18px;
        accent-color: #38bdf8;
    }

    .btn-save {
        width: 100%;
        background: #38bdf8;
        color: #0f172a;
        border: none;
        padding: 18px;
        border-radius: 50px;
        font-weight: 800;
        text-transform: uppercase;
        margin-top: 30px;
        cursor: pointer;
        transition: 0.3s;
    }

    .btn-save:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(56, 189, 248, 0.4);
    }

    .btn-back {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #64748b;
        text-decoration: none;
        font-size: 0.8rem;
    }
</style>

<div class="form-container">
    <h1>Nuevo Ranking</h1>

    {{ form_start(form) }}

        <div>
            {{ form_label(form.nombre, "Nombre de la Categoría") }}
            {{ form_widget(form.nombre, {'attr': {'placeholder': 'Ej: Mejores de Acción 2024'}}) }}
        </div>

        <div>
            {{ form_label(form.peliculas, "Selecciona las películas para este ranking") }}
            <div class="peliculas-selector">
                {{ form_widget(form.peliculas) }}
            </div>
        </div>

        <button type="submit" class="btn-save">Crear Ranking </button>

    {{ form_end(form) }}

    <a href="{{ path('app_admin_dashboard') }}" class="btn-back">← Volver al Panel</a>
</div>
{% endblock %}

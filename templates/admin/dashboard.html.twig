{% extends 'base.html.twig' %}

{% block title %}Panel de Control - Admin{% endblock %}

{% block body %}
<style>
    :root {
        --primary-dark: #1e293b;
        --accent-color: #3b82f6;
        --bg-gradient: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        --gold: #fbbf24;
    }

    body {
        background: var(--bg-gradient);
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 40px 0;
        min-height: 100vh;
        color: white;
    }

    .admin-container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .dashboard-header h1 {
        font-size: 3rem;
        font-weight: 900;
        letter-spacing: -2px;
        margin: 0;
        background: linear-gradient(to right, #fff, #94a3b8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .grid-admin {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .admin-card {
        background: rgba(30, 41, 59, 0.7);
        backdrop-filter: blur(10px);
        padding: 30px 20px;
        border-radius: 24px;
        text-decoration: none;
        color: white;
        border: 1px solid rgba(255,255,255,0.1);
        transition: 0.3s ease;
        text-align: center;
    }

    .admin-card:hover {
        transform: translateY(-5px);
        background: rgba(30, 41, 59, 0.9);
        border-color: var(--accent-color);
    }

    .stat-number { font-size: 2rem; font-weight: 900; color: var(--gold); margin-bottom: 5px; }
    .card-title { font-size: 1.1rem; font-weight: 700; margin-bottom: 15px; display: block; }

    .btn-group-admin { display: flex; flex-direction: column; gap: 8px; }
    .btn-action {
        padding: 10px;
        border-radius: 12px;
        background: var(--accent-color);
        color: white;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        text-decoration: none;
        transition: 0.2s;
    }
    .btn-action:hover { filter: brightness(1.2); }

    .podium-section {
        background: rgba(15, 23, 42, 0.6);
        border-radius: 30px;
        padding: 40px;
        border: 1px solid rgba(251, 191, 36, 0.2);
        margin-bottom: 40px;
    }

    .podium-title {
        text-align: center;
        font-weight: 800;
        color: var(--gold);
        margin-bottom: 30px;
        font-size: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .podium-container {
        display: flex;
        justify-content: center;
        align-items: flex-end;
        gap: 15px;
    }

    .podium-item {
        background: #1e293b;
        border-radius: 20px;
        padding: 20px;
        width: 200px;
        text-align: center;
        border: 2px solid #334155;
        position: relative;
    }

    .rank-1 { height: 260px; order: 2; border-color: var(--gold); box-shadow: 0 0 30px rgba(251, 191, 36, 0.1); }
    .rank-2 { height: 210px; order: 1; border-color: #94a3b8; }
    .rank-3 { height: 180px; order: 3; border-color: #b45309; }

    .podium-img {
        width: 60px;
        height: 90px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.5);
    }

    .medal-label {
        position: absolute;
        top: -15px;
        left: 50%;
        transform: translateX(-50%);
        background: var(--gold);
        color: #000;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        font-weight: 900;
        line-height: 30px;
    }

    .votos-badge {
        background: rgba(251, 191, 36, 0.1);
        color: var(--gold);
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: bold;
    }

    .btn-back-main {
        display: block;
        width: fit-content;
        margin: 40px auto;
        padding: 15px 40px;
        background: white;
        color: black;
        border-radius: 50px;
        font-weight: 800;
        text-decoration: none;
        transition: 0.3s;
    }
    .btn-back-main:hover { transform: scale(1.05); background: var(--gold); }
</style>

<div class="admin-container">
    <div class="dashboard-header">
        <h1>üõ†Ô∏è ADMIN PANEL</h1>
        <p style="color: #94a3b8;">Bienvenido, <strong>{{ app.user.email }}</strong></p>

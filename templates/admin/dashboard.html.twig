{% extends 'base.html.twig' %}

{% block title %}Panel de Control - Admin{% endblock %}

{% block body %}
<style>
    body {
        background-color: #87CEEB;
        font-family: 'Poppins', 'Segoe UI', sans-serif;
        margin: 0;
        padding: 40px 0;
        min-height: 100vh;
    }
    .admin-container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 50px;
        color: #1e293b;
    }

    .grid-admin {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
        margin-top: 20px;
    }

    .admin-card {
        background: white;
        padding: 30px;
        border-radius: 30px;
        text-decoration: none;
        color: #333;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
    }

    .admin-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.2);
    }

    .icon-bg {
        width: 70px;
        height: 70px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.2rem;
        margin-bottom: 15px;
    }

    /* Colores por secci√≥n mejorados */
    .bg-pelis { background: #fee2e2; color: #ef4444; }
    .bg-rank { background: #dbeafe; color: #3b82f6; }
    .bg-stats { background: #f3e8ff; color: #a855f7; }
    .bg-api { background: #ecfdf5; color: #10b981; }
    .bg-cat { background: #fff7ed; color: #f97316; }

    .card-title { font-size: 1.3rem; font-weight: 800; margin: 10px 0; text-transform: uppercase; }
    .card-desc { color: #64748b; font-size: 0.85rem; text-align: center; margin-bottom: 20px; min-height: 40px; }

    .btn-action {
        padding: 10px 25px;
        border-radius: 50px;
        background: #1e293b;
        color: white;
        font-size: 0.75rem;
        font-weight: bold;
        text-transform: uppercase;
        transition: 0.3s;
    }
    .admin-card:hover .btn-action { background: #000; }

    .stat-number {
        font-size: 2.2rem;
        font-weight: 900;
        color: #1e293b;
        margin-bottom: 5px;
    }

    .badge-requirement {
        position: absolute;
        top: 15px;
        right: 15px;
        background: #f1f5f9;
        padding: 4px 10px;
        border-radius: 8px;
        font-size: 0.65rem;
        font-weight: bold;
        color: #94a3b8;
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        margin-top: 50px;
        padding: 15px 35px;
        background: #1e293b;
        border-radius: 50px;
        text-decoration: none;
        color: white;
        font-weight: 800;
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        transition: 0.3s;
    }
    .btn-back:hover { transform: scale(1.05); background: #000; }
</style>

<div class="admin-container">
    <div class="dashboard-header">

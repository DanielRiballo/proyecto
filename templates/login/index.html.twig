{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión{% endblock %}

{% block body %}
    <div style="margin: 50px auto; max-width: 400px; padding: 20px; border: 1px solid #ccc; border-radius: 10px; background-color: #f9f9f9;">
        <form method="post">
            {% if error %}
                <div style="color: red; margin-bottom: 15px;">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <h1 style="text-align: center;">Acceder</h1>

            <label for="username">Email:</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus style="width: 100%; padding: 8px; margin-bottom: 10px;">

            <label for="password">Contraseña:</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required style="width: 100%; padding: 8px; margin-bottom: 20px;">

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" style="width: 100%; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer;">
                Entrar
            </button>
        </form>
    </div>
{% endblock %}

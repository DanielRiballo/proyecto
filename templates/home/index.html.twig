{% extends 'base.html.twig' %}

{% block title %}Inicio - Cine Ranking{% endblock %}

{% block body %}
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #1a1a1a;
            background-image:
                linear-gradient(rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0.75)),
                url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=2070&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            font-family: 'Poppins', 'Segoe UI', sans-serif;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .main-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
        }

        .logo-central {
            background-color: white;
            padding: 15px 45px;
            border-radius: 15px;
            margin-bottom: 50px;
            font-weight: 900;
            font-size: 2rem;
            text-align: center;
            color: #1a1a1a;
            box-shadow: 0 15px 35px rgba(0,0,0,0.6);
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .grid-menu {
            display: grid;
            grid-template-columns: repeat(2, 220px);
            grid-template-rows: repeat(2, 220px);
            gap: 25px;
        }

        .card-btn {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            border-radius: 40px;
            color: white;
            text-decoration: none;
            font-weight: 800;
            font-size: 1.1rem;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            text-align: center;
            box-shadow: 0 10px 20px rgba(0,0,0,0.4);
            border: none;
            position: relative;
            overflow: hidden;
        }

        .card-btn:hover {
            transform: translateY(-12px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.6);
        }

        /* Colores de las tarjetas */
        .card-blue { background: linear-gradient(135deg, #3b82f6, #2563eb); }   /* Rankings / Login */
        .card-green { background: linear-gradient(135deg, #10b981, #059669); }  /* Registro */
        .card-red { background: linear-gradient(135deg, #ef4444, #dc2626); }    /* Cat√°logo */
        .card-orange { background: linear-gradient(135deg, #f97316, #ea580c); } /* Gesti√≥n */
        .card-purple { background: linear-gradient(135deg, #a855f7, #9333ea); } /* Stats */

        .card-locked {
            background: rgba(255, 255, 255, 0.05);
            border: 2px dashed rgba(255, 255, 255, 0.2);
            cursor: not-allowed;
            backdrop-filter: blur(10px);
        }

        .icon { font-size: 3.8rem; margin-bottom: 10px; }

        .user-header {
            position: absolute;
            top: 30px;
            right: 40px;
            display: flex;
            align-items: center;
            gap: 15px;
            color: white;
            background: rgba(255,255,255,0.1);
            padding: 10px 25px;
            border-radius: 50px;
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255,255,255,0.2);
            font-weight: 600;
        }

        .btn-logout {
            background: #ff4757;
            color: white;
            padding: 8px 18px;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 800;
            font-size: 0.8rem;
            transition: 0.3s;
            text-transform: uppercase;
        }
        .btn-logout:hover { background: #ff6b81; transform: scale(1.05); }

        .welcome-text {
            color: rgba(255,255,255,0.6);
            margin-bottom: 20px;
            font-size: 1rem;
            letter-spacing: 1px;
        }
    </style>

    {# CABECERA DE USUARIO (Solo si est√° logueado) #}
    {% if app.user %}
        <div class="user-header">
            <span>üë§ {{ app.user.email }}</span>
            <a href="{{ path('app_logout') }}" class="btn-logout">CERRAR SESI√ìN</a>
        </div>
    {% endif %}

    <div class="main-container">
        <div class="logo-central">üé¨ CINE RANKING</div>

        {% if app.user %}
            <div class="welcome-text">PANEL DE CONTROL</div>
        {% else %}
            <div class="welcome-text">BIENVENIDO, POR FAVOR IDENTIF√çCATE</div>
        {% endif %}

        <div class="grid-menu">
            {% if app.user %}
                {# --- VISTA PARA USUARIOS LOGUEADOS --- #}

                {# 1. RANKINGS #}
                <a href="{{ path('app_admin_ranking_genero', {'genero': 'all'}) }}" class="card-btn card-blue">
                    <div class="icon">üèÜ</div>
                    RANKINGS
                </a>

                {# 2. CAT√ÅLOGO #}
                <a href="{{ path('app_pelicula_catalogo') }}" class="card-btn card-red">
                    <div class="icon">üçø</div>
                    CAT√ÅLOGO
                </a>

                {# 3. GESTI√ìN (Solo Admin) #}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_admin_pelicula_index') }}" class="card-btn card-orange">
                        <div class="icon">‚öôÔ∏è</div>
                        GESTI√ìN
                    </a>
                {% else %}
                    <div class="card-btn card-locked">
                        <div class="icon" style="opacity: 0.3;">üîí</div>
                        <span style="opacity: 0.4;">ADMIN ONLY</span>
                    </div>
                {% endif %}

                {# 4. STATS (Dashboard) #}
                <a href="{{ path('app_admin_dashboard') }}" class="card-btn card-purple">
                    <div class="icon">üìä</div>
                    DASHBOARD
                </a>

            {% else %}
                {# --- VISTA PARA USUARIOS NO LOGUEADOS --- #}

                {# 1. INICIAR SESI√ìN #}
                <a href="{{ path('app_login') }}" class="card-btn card-blue" style="grid-column: span 1; grid-row: span 1;">
                    <div class="icon">üîë</div>
                    ENTRAR
                </a>

                {# 2. REGISTRO #}
                <a href="{{ path('app_register') }}" class="card-btn card-green">
                    <div class="icon">üìù</div>
                    REGISTRO
                </a>

                {# 3. INFO / CATALOGO PUBLICO (Opcional) #}
                <div class="card-btn card-locked" style="grid-column: span 2; grid-row: span 1; height: 100px; margin-top: 20px;">
                    <p style="margin: 0; font-size: 0.9rem;">Identif√≠cate para valorar pel√≠culas y ver el ranking mundial</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

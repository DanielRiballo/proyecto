{% extends 'base.html.twig' %}

{% block title %}Cat√°logo de Pel√≠culas{% endblock %}

{% block body %}
    <style>
        .catalog-container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
            font-family: sans-serif;
        }
        .page-title {
            text-align: center;
            color: #fff;
            font-size: 2.5rem;
            margin-bottom: 40px;
            text-shadow: 0 2px 4px rgba(0,0,0,0.2);
        }

        /* Grid para las tarjetas */
        .movie-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 30px;
        }

        /* Dise√±o de la tarjeta */
        .movie-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            text-decoration: none; /* Quitamos subrayado porque haremos toda la tarjeta un enlace */
            color: inherit;
            position: relative;
        }

        .movie-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        }

        /* Imagen */
        .card-img {
            height: 350px;
            width: 100%;
            object-fit: cover;
            background-color: #ddd;
        }

        /* Contenido */
        .card-content {
            padding: 20px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }
        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin: 0 0 10px 0;
            color: #333;
        }
        .card-meta {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 15px;
            display: flex;
            justify-content: space-between;
        }
        .card-desc {
            font-size: 0.95rem;
            color: #555;
            line-height: 1.4;
            display: -webkit-box;
            -webkit-line-clamp: 3; /* Limita a 3 l√≠neas */
            -webkit-box-orient: vertical;
            overflow: hidden;
            margin-bottom: 15px;
        }

        /* Estilos nuevos para la valoraci√≥n */
        .rating-badge {
            background-color: #f1c40f;
            color: #333;
            font-weight: bold;
            padding: 5px 10px;
            border-radius: 20px;
            display: inline-block;
            margin-bottom: 10px;
            font-size: 0.9rem;
        }

        .btn-vote {
            margin-top: auto;
            background-color: #3b82f6;
            color: white;
            text-align: center;
            padding: 10px;
            border-radius: 8px;
            font-weight: bold;
            transition: background 0.3s;
        }
        .movie-card:hover .btn-vote {
            background-color: #2563eb;
        }

        /* Fondo naranja general para esta p√°gina */
        body { background-color: #fca542; }

        .btn-back {
            display: inline-block;
            margin-top: 40px;
            color: white;
            text-decoration: none;
            font-weight: bold;
            border: 2px solid white;
            padding: 10px 20px;
            border-radius: 30px;
        }
        .btn-back:hover { background: white; color: #fca542; }
    </style>

    <div class="catalog-container">
        <h1 class="page-title">üé¨ Cartelera</h1>

        <div class="movie-grid">
            {% for pelicula in peliculas %}

                {# Calculamos la media de estrellas aqu√≠ mismo #}
                {% set suma = 0 %}
                {% set cantidad = 0 %}
                {% for voto in pelicula.valoraciones %}
                    {% set suma = suma + voto.puntuacion %}
                    {% set cantidad = cantidad + 1 %}
                {% endfor %}

                {# Enlace a la p√°gina de detalle/votar #}
                <a href="{{ path('app_pelicula_show', {'id': pelicula.id}) }}" class="movie-card">

                    {% if pelicula.imageUrl %}
                        <img src="{{ pelicula.imageUrl }}" alt="{{ pelicula.titulo }}" class="card-img">
                    {% else %}
                        <div class="card-img" style="display:flex;align-items:center;justify-content:center;color:#666;">
                            Sin Imagen
                        </div>
                    {% endif %}

                    <div class="card-content">
                        <div style="display: flex; justify-content: space-between; align-items: start;">
                            <h3 class="card-title">{{ pelicula.titulo }}</h3>

                            {# Mostramos la estrellita con la nota #}
                            {% if cantidad > 0 %}
                                <div class="rating-badge">‚≠ê {{ (suma / cantidad)|number_format(1) }}</div>
                            {% endif %}
                        </div>

                        <div class="card-meta">
                            <span>üìÖ {{ pelicula.year }}</span>
                            <span>üé≠ {{ pelicula.genre }}</span>
                        </div>

                        <p class="card-desc">
                            {{ pelicula.description }}
                        </p>

                        <div class="btn-vote">
                            Ver y Votar ‚úçÔ∏è
                        </div>
                    </div>
                </a>
            {% else %}
                <p style="color: white; text-align: center; font-size: 1.5rem; grid-column: 1/-1;">
                    No hay pel√≠culas registradas todav√≠a. üò¢
                </p>
            {% endfor %}
        </div>

        <div style="text-align: center;">
            <a href="{{ path('app_home') }}" class="btn-back">üîô Volver al Inicio</a>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Lista de Rankings{% endblock %}

{% block body %}
    <div class="container" style="margin: 20px;">
        <h1>Listado de Rankings</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th> <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            {% for ranking in rankings %}
                <tr>
                    <td>{{ ranking.id }}</td>
                    {# Si tu entidad no tiene campo 'nombre', borra la siguiente línea #}
                    <td>{{ ranking.nombre }}</td>
                    <td>
                        <a href="#">Editar (Próximamente)</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No hay rankings creados todavía.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_ranking_new') }}" class="btn btn-primary">Crear nuevo Ranking</a>
    </div>
{% endblock %}
